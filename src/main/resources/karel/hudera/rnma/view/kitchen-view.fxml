<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="karel.hudera.rnma.presentation.controllers.KitchenViewController"
      style="-fx-background-color: red;">
    <Label text="This is the Kitchen!" />
    <!-- Spacer region to push the button container down -->
    <Region VBox.vgrow="ALWAYS"/>

    <HBox spacing="20.0" alignment="CENTER" style="-fx-padding: 20 0 10 0">
    <Button text="Go to Dining Room" onAction="#onDiningRoomButtonClick"/>
    <Button text="Go to Garage" onAction="#onGarageButtonClick"/>
    <Button text="Go to Living Room" onAction="#onLivingRoomButtonClick"/>
    </HBox>
</VBox>