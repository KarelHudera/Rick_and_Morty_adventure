<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/23"
           fx:controller="karel.hudera.rnma.presentation.controllers.StartViewController"
           xmlns:fx="http://javafx.com/fxml/1"
           prefWidth="1920"
           prefHeight="1080">

    <!-- Background Image to fill the entire screen -->
    <ImageView fx:id="backgroundImage" preserveRatio="true"/>

    <!-- VBox for centering the Start button -->
    <VBox alignment="CENTER" spacing="20.0" StackPane.alignment="CENTER">
        <Button text="Start" onAction="#onStartGameButtonClick"
                style="-fx-font-size: 24; -fx-padding: 10;"/>
        <!-- Button to start the game; triggers action on click -->
    </VBox>
</StackPane>